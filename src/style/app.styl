@font-face
    font-family: Granjon;
    src: url("/fonts/Granjon.otf")

*
    margin 0
    padding 0

body
    overflow hidden
    position fixed
    top 0
    left 0
    right 0
    bottom 0

canvas
    position absolute
    top 0
    left 0
    width 100%
    height 100%

body.on
    cursor: pointer

.loadingScreen
    position: absolute
    display: flex
    justify-content: center
    align-items center
    width: 100vw;
    height: 100vh;
    background: #fff;
    z-index 3
    opacity 1

    .pourcentContent
        font-size: 10vw
        font-family Granjon
    .start
        display none
        font-size: 5vw
        font-family Granjon
        opacity 0
        letter-spacing 0.7vw
        font-weight lighter


.containerInformation
    display none
    position: absolute
    flex-direction column
    width 50vw
    height:100vh
    background: rgba(0,0,0,0.6)
    opacity 0
    z-index 2
    color : #fff

    .buttonQuitMenu
        display: flex
        align-items center
        font-size 1.8vw
        margin-top 1.5vw
        font-family Montserrat, sans-serif
        cursor: pointer
    .buttonQuitMenu:hover
        transform scale(1.05)

    .contentInformation
        display: none
        justify-content: center
        flex-direction column
        width: 100%;
        margin-top 20px;

        h2
            font-family Granjon
            font-size: 2em
            text-align: center
        p
            padding 25px
            font-family: sans-serif
            line-height 1.8
            font-size: 18px

    .show
        display: flex

.left
    align-items  flex-start
    .buttonQuitMenu
        margin-left 1.5vw
.right
    align-items:flex-end
    .buttonQuitMenu
        margin-right 1.5vw






